    private void jToggleButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                               
        // TODO add your handling code here:
        File file =new File("Usuario.txt");
        if(!file.exists()){
            try{
                file.createNewFile();
                
            }catch(IOException ex){ex.printStackTrace();}
        }
        FileWriter wr ;
        BufferedWriter bw;
        PrintWriter pt;
 try{
     file=new File("Usuario.txt");
     wr=new FileWriter(file);
     bw=new BufferedWriter(wr);
     pt=new PrintWriter(bw);
     pt.write(jTextField1.getText()+"\t"+jTextField2.getText()+"\t"+jTextField3.getText()+"\t"+jPasswordField1.getSelectedText());
     //pt.append("\n"+jTextField1.getText()+"\t"+jTextField2.getText()+"\t"+jTextField3.getText()+"\t"+jPasswordField1.getSelectedText());
     pt.close();
     bw.close();
     
 }   catch (Exception e){JOptionPane.showMessageDialog(null, "Erro"+e);}    
    }                                              

